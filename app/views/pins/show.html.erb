<div class="header">
  <h1>
    <%= "#{@pin.title}" %>
  </h1>
</div>

<div class="show-pin">
  <img src="<%= @pin.image.url(:medium) %>"><br> 
  <p><%= "#{@pin.text}" %></p>

  <hr/>
  <p>
    <b>Visit <%= "#{@pin.title}" %> at: </b>
      <%= link_to "#{@pin.url}", @pin.url, html_options={class: "url"} %>
  </p>
</div>
<br/>
<a href="/">
  Back to Home
</a>
