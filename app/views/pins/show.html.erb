<div class="header">
  <h1>
    <%= "#{@pin.title}" %>
  </h1>
</div>
      <%= link_to "Edit Pin", edit_pin_path(@pin) %><br>
      <%= link_to "Delete Pin", pin_path(@pin), :confirm => "Are you sure?", :method => :delete %>
      <hr>
<div class="show-pin">
  <img src="<%= @pin.image.url(:medium) %>"><br> 
  <p><%= "#{@pin.text}" %></p>

  <hr/>
  <p>
    <b>Visit <%= "#{@pin.title}" %> at: </b>
      <%= link_to "#{@pin.url}", @pin.url, html_options = {target: "_blank", class: "url"} %><br><br>
  </p>
</div>

