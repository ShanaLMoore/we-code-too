<div class="header">
  <h1>We Code Too!</h1>
  <h3>A Collection of Diversity-Friendly Tech Resources!</h3>
</div>
<hr/>
<div class="pins">
  <% @pins.each_slice(3) do |row| %>
    <div class="row">
      <% row.each do |pin| %>      
        <div class="pin-container col-md-4">
          <div class="pin">
            
            <div class="col-xs-9">
              <h4>
                <%=link_to "#{pin.title}", pin_by_name_path(slug: pin.slug) %>
              </h4>
                <%= link_to "#{pin.url}", pin.url, html_options={class:"url"} %>
            </div>
            <hr/>
            <p class="text"><%= "#{pin.text}" %></p>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<hr/>