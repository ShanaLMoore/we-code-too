<div>
 <!--  <h1>We Code Too!</h1><h3>A Collection of Diversity-Friendly Tech Resources!</h3> -->
  <p>You are logged in as: <%= current_user.email %></p><br>

</div>
<hr/>
<div class="pins">
  <% if @pins.empty? %>
  <h1>You have no pins! <br> Add some to display here!</h1>
  <%end %>
  <% @pins.each_slice(3) do |row| %>
    <div class="row">
      <% row.each do |pin| %>      
        <div class="pin-container col-md-4">
          <div class="pin">
            <div class="pin-header row">
              <div class="logo-thumbnail col-xs-3">
                  <% if pin.image %>
                    <img src="<%= pin.image.url(:medium) %>">
                    <% end %>
                  </div>
                </div>

            <div class="col-xs-9">
              <h4>
                <%=link_to "#{pin.title}", pin_by_name_path(slug: pin.slug) %>
              </h4>
                <%= link_to "#{pin.url}", pin.url, html_options={class:"url", target:"_blank"} %>
            </div>
            <hr/>
            <p class="text"><%= "#{pin.text}" %></p>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<hr/>