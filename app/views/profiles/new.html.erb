<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= form_for @profile do |f| %>
        <h1>Profile Preferences:</h1><br><br><br>
        <ul>
          <%= f.fields_for :preferences do |preferences_form| %>

            <div class="form-group">
              <label for="pin_title" class="col-sm-2 control-label">Name</label>
              <div class="col-sm-10">
                <%= f.text_field :name, class: "form-control" %>
              </div>
            </div>

            <div class="form-group">
              <div class="col-sm-2">
              </div>
              <div class="col-sm-10">
                <%= f.button "Save", (options = {class: "btn btn-default form-control"}) %>
            </div>
          <% end %>
        </ul>
      <% end %>
    </section>
  </aside>
</div>